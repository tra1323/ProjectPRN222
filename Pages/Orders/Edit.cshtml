@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Staff")]
@model ProjectPRN222.Pages.Orders.EditModel
@{
    ViewData["Title"] = "Cập Nhật Đơn Hàng";
}

<h2>Cập Nhật Đơn Hàng</h2>

<form method="post">
    <div class="form-group">
        <label>Mã Đơn Hàng</label>
        <input type="text" class="form-control" value="@Model.Order.Id" readonly />
    </div>
    <div class="form-group">
        <label>Trạng Thái</label>
        <select asp-for="Order.Status" class="form-control">
            <option value="Pending">Đang xử lý</option>
            <option value="Completed">Hoàn thành</option>
            <option value="Cancelled">Hủy</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
</form>
